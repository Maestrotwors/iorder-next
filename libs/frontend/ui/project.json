{
  "name": "frontend-ui",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/frontend/ui/src",
  "prefix": "io",
  "tags": ["frontend-layer:ui"],
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/frontend/ui/jest.config.ts"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "./src/index.ts",
        "additionalEntryPoints": [
          "./accordion/src/index.ts",
          "./alert/src/index.ts",
          "./button/src/index.ts",
          "./card/src/index.ts",
          "./check-box/src/index.ts",
          "./input/src/index.ts",
          "./option/src/index.ts",
          "./select/src/index.ts",
          "./table/src/index.ts",
          "./tag/src/index.ts",
          "./toast/src/index.ts",
          "./tooltip/src/index.ts"
        ],
        "generateExportsField": true
      }
    }
  }
}
